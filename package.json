{
  "name": "promobar",
  "version": "0.0.6",
  "description": "A lightweight and easily configurable promo bar in ES6.",
  "author": "barrelny",
  "contributors": [
    {
      "name": "estrattonbailey",
      "email": "ericstrattonbailey@gmail.com",
      "url": "https://github.com/estrattonbailey"
    }
  ],
  "main": "./src/index.js",
  "scripts": {
    "browser": "mkdir -p browser && browserify src/index.js --standalone promobar -p [minifyify --no-map] src/index.js > browser/index.js",
    "watch": "watchify test/dev.js -v -d -o test/index.js",
    "test": "ava test/test.js -v",
    "size": "bundle-size ./browser/index.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "ava": {
    "require": [
      "./test/test-helpers.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "6.6.0",
    "babel-register": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^12.0.1",
    "bundle-size": "^0.7.0",
    "jsdom": "^9.5.0",
    "minifyify": "^7.3.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "loop.js": "^0.1.0",
    "stockpile.js": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:barrel/promobar.git"
  },
  "license": "MIT"
}
